# Environment Variables - Production Configuration

# Application Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_VERSION=1.0.0

# API Configuration
NEXT_PUBLIC_API_URL=https://api.biblegamehub.com
API_SECRET_KEY=your-api-secret-key

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.biblegamehub.com

# Database Configuration
DATABASE_URL=postgresql://biblegamehub_user:password@postgres:5432/biblegamehub
REDIS_URL=redis://redis:6379

# Authentication
AUTH_SECRET=your-auth-secret-key
NEXTAUTH_URL=https://biblegamehub.com
NEXTAUTH_SECRET=your-nextauth-secret

# Analytics & Monitoring
NEXT_PUBLIC_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
LOG_LEVEL=info

# Performance & Caching
CACHE_TTL=3600
COMPRESSION_LEVEL=6
IMAGE_QUALITY=85

# Security
CORS_ORIGINS=https://biblegamehub.com,https://www.biblegamehub.com
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=900000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Push Notifications
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# Feature Flags
ENABLE_MULTIPLAYER=true
ENABLE_SOCIAL_FEATURES=true
ENABLE_ACHIEVEMENTS=true
ENABLE_OFFLINE_MODE=true
ENABLE_CLOUD_SYNC=true

# Development (only in development)
ENABLE_DEV_TOOLS=false
ENABLE_BUNDLE_ANALYZER=false
ENABLE_HOT_RELOAD=false
